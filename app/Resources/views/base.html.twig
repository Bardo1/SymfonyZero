<!DOCTYPE html>
<html {{sonata_seo_html_attributes()}}>
    <head {{sonata_seo_head_attributes()}}>
        {{ sonata_seo_title() }}
        {{ sonata_seo_metadatas() }}
        {{ sonata_seo_link_canonical() }}
        {{ sonata_seo_lang_alternates() }}

        <meta charset="UTF-8" />
        <title>{% block title %}Welcome to Symfony Zero preconfigured version!{% endblock %}</title>

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
        integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

        {% stylesheets 'css/*' filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>

    <div id="wrapper">
        {{ include('default/sidebar.html.twig') }}

        <div id="container-fluid">
            <div id="welcome">
                <a href="{{path('homepage')}}"><img src="{{asset("bundles/app/images/emergya.png")}}" alt="Emergya"></a><p/>
                <h2>SymfonyZero based on  {{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION') }}</h2>
            </div>

        <div class="alert alert-success">
        {% for flash_message in app.session.flashbag.get('info') %}
            <div class="flash-notice">
                {{ flash_message }}
            </div>
        {% endfor %}
        </div>
            {{ wo_render_breadcrumbs() }}
            {% block body %}
            {% endblock %}
        </div>
    </div>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"
    integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

    {% block javascripts %}
    {% endblock %}
</body>
</html>
