{% trans_default_domain 'EasyAdminBundle' %}

{% if view == 'show' %}
    {% if value == true %}
        <span class="label label-success">{{ 'true'|trans }}</span>
    {% else %}
        <span class="label label-danger">{{ 'false'|trans }}</span>
    {% endif %}
{% else %}
    <input type="checkbox" {{ value == true ? 'checked' : '' }}
       data-toggle="toggle" data-size="mini"
       data-onstyle="success" data-offstyle="danger"
       data-on="{{ 'true'|trans }}" data-off="{{ 'false'|trans }}">
{% endif %}
